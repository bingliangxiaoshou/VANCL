/* pages/scan/scan.wxss */
.scan{
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0;
  width: 100%;
}
.scan_item{
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 100%;
  margin-top: 200rpx;
}
.scan_item view{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: auto;
}
.scan_item .payment{
  background: #FFD524;
}
.scan_item .sign_in{
  background: #55ABFF;
}
.scan_item image{
  margin: auto;
  width: 80rpx;
  height: 80rpx;
  padding: 60rpx;
}
.scan_item text{
  font-size: 17px;
  color: #9F9F9F;
  margin: 20rpx;
}