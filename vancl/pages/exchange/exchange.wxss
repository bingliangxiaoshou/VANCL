/* pages/exchange/exchange.wxss */
.exchange{
  display: flex;
  flex-direction: column;
}
/* 顶部兑换规则&分享 */
.exchange .top_ex{
  display: flex;
  justify-content: space-between;
  margin: 0 15rpx;
}
.top_ex text{
  display: inline-block;
  font-size: 12px;
  border-radius: 50rpx;
  padding: 5rpx 0;
  width: 140rpx;
  text-align: center;
}
.top_ex .rule{
  color: #bbb;
  border: 1rpx solid #bbb;
}
.top_ex .share{
  color: #fff;
  background: #fc0;
}
/* 画图 */
.page-body-wrapper{
  border-bottom: 1rpx solid #bbb;
  margin: 0 10rpx;
  position: relative;
}
.canvas {
  width: 440rpx;
  height: 440rpx;
  margin: 30rpx auto;
  background-color: #fff;
}
.step{
  display: flex;
  align-items: center;
  flex-direction: column;
  position: absolute;
  top: 120rpx;
  left: 260rpx;
}
.step text{
  margin-bottom: 30rpx;
}
.step .today{
  font-size: 12px;
}
.step .number{
  font-size: 30px;
  font-weight: 700;
}
.step .draw{
  font-size: 12px;
  background: #fc0;
  border-radius: 50rpx;
  display: inline-block;
  padding: 10rpx 50rpx;
}
/* 奖品标题 */
.exchange .prize{
  display: inline-block;
  font-size: 14px;
  background: #fc0;
  border-radius: 50rpx;
  text-align: center;
  margin: 30rpx 150rpx;
  padding: 10rpx 0;
}
/* 中奖信息 */
.notice{
  border: 1rpx solid #bbb;
  margin: 0 10rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}
.notice swiper{
  height: 50rpx;
  text-align: center;
}
.notice text{
  font-size: 12px;
  color: #B6A9A9;
}
/* 奖品列表 */
.exchange .prize_list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  border: 1rpx solid #bbb;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 0 10rpx;
  background: #f6f6f6;
}
.prize_list .list_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 40%;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: #bbb 10rpx 10rpx 10rpx;
  background: #fff;
}
.list_item image{
  width: 100%;
  height: 280rpx;
}
.list_item text{
  font-size: 14px;
}